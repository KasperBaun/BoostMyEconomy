    };

    // Style the cells according to a positive or negative result
    private Func<Result, string> _cellStyleFunc => x =>
    {
        string style = "";

        if (x.Value >= 0)
            style += "color:#00FF00";

        else
            style += "color:#FF0000";

        return style;
    };


    /* Recent transactions */
    private bool LoadingRecentTransactions { get; set; } = true;
    private List<Transaction> RecentTransactions = new();

    public async void LoadRecentTransactionsData()
    {
        RecentTransactions = UserTransactions.FindAll(e => 
            DateOnly.FromDateTime(DateTime.Parse(e.MadeAt)) >= DateOnly.FromDateTime(_dateRange.Start.Value) 
            && 
           DateOnly.FromDateTime(DateTime.Parse(e.MadeAt)) <= DateOnly.FromDateTime(_dateRange.End.Value)); 
        
        //RecentTransactions = UserTransactions;
        LoadingRecentTransactions = false;
        StateHasChanged();
    }    

