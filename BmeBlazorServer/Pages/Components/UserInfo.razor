@using MudBlazor

<MudCard Class="rounded-xl">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Square="true" Variant="Variant.Filled">
                <MudIcon  Color="Color.Primary" Icon="@Icons.Filled.Moving" Size="Size.Large" />
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">Kasper Baun</MudText> 
            <MudTextField
                T="string"
                Text="Verified account"
                Style="font-size:10px;"
                Class="mud-typography-body2 mud-text-secondary"
                ReadOnly="true"
                DisableUnderLine="true"
                AdornmentColor="Color.Primary"
                AdornmentIcon="@Icons.Filled.VerifiedUser"
                IconSize="Size.Medium"
                Adornment="Adornment.Start" 
            />
            <MudButton Variant="Variant.Text" Color="Color.Primary">Edit account</MudButton>
        </CardHeaderContent>
        <CardHeaderActions>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
        <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
    </MudCardActions>
</MudCard>


