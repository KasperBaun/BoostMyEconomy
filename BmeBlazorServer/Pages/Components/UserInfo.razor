@using MudBlazor

<MudCard Class="rounded-xl justify-center pa-3">
            <MudText Class="d-flex align-center justify-center" Typo="Typo.body1">Kasper Baun</MudText> 
            <MudTextField
                T="string"
                Text="Verified account"
                Style="font-size:10px;"
                Class="mud-typography-body2 mud-text-secondary justify-center d-flex align-center"
                ReadOnly="true"
                DisableUnderLine="true"
                AdornmentColor="Color.Primary"
                AdornmentIcon="@Icons.Filled.VerifiedUser"
                IconSize="Size.Medium"
                Adornment="Adornment.Start" 
            />
            <MudButton Class="d-flex align-center mx-auto" Variant="Variant.Text" Color="Color.Primary">Edit account</MudButton>
    <MudCardContent>
        <MudText Color="Color.Primary" Style="font-size:26px;">Net worth</MudText>
        <MudText >DKK 1.426.719</MudText>
        <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
        <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
    </MudCardActions>
</MudCard>


