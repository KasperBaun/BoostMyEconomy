@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Email" Class="mr-3 mb-n1"/>
            Forgot your password?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" />
        <MudText Text="Please enter your email adress."/>
        <MudTextField Value="Email" Label="Email adress" T="string"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="ResetPassword">Reset password</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private string Email { get; set; } = String.Empty;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void ResetPassword()
    {
        //In a real world scenario this bool would probably be a service to delete the item from api/database
        Snackbar.Configuration.PositionClass = Defaults.Classes.Position.TopRight;
        Snackbar.Configuration.SnackbarVariant = Variant.Filled;
        Snackbar.Configuration.VisibleStateDuration = 3000;
        Snackbar.Add("We've sent you an email. Please confirm and reset your password.", Severity.Success, config => { config.Onclick = snackbar => { StopPlaying(); return Task.CompletedTask; }; });
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void StopPlaying()
    {
        Snackbar.Add("Stop playing!");
    }
}